{% extends "layout.njk" %}

{% block title %}
課
{% endblock title %}

{% block main %}
<h1>課</h1>
<form action="/courses" method="post">
  <label for="klass-id" class="form-label">授業</label>
  <select id="klass-id" name="klassId" class="form-select">
    {% for klass in klasses %}
      <option value={{ klass.id }}>{{ klass.season }}: {{ klass.name }}</option>
    {% endfor %}
  </select>
  <label for="number" class="form-label">番号</label>
  <input type="text" id="number" name="number" class="form-control">
  <label for="title" class="form-label">タイトル</label>
  <input type="text" id="title" name="title" class="form-control">
  <button class="btn btn-primary my-2">実行</button>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">授業</th>
      <th scope="col">番号</th>
      <th scope="col">タイトル</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {% for item in items %}
      <tr>
        <th scope="row">{{ item.id }}</th>
        <td>{{ item.klass.season }}: {{ item.klass.name }}</td>
        <td>{{ item.number }}</td>
        <td>{{ item.title }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock main %}
