{% extends "layout.njk" %}

{% block title %}
トップページ 
{% endblock title %}

{% block main %}
<div>
  <h1>POST</h1>
  <form action="/users" method="post">
    <label for="firstname" class="form-label">名前</label>
    <input type="text" id="firstname" name="firstName" class="form-control">
    <label for="lastname" class="form-label">苗字</label>
    <input type="text" id="lastname" name="lastName" class="form-control">
    <button class="btn btn-primary my-2">実行</button>
  </form>
</div>
<div>
  <h1>GET</h1>
  <div class="my-3">
    <h2>All</h2>
    <form action="/users" method="get">
      <button class="btn btn-primary my-2">実行</button>
    </form>
  </div>
  <div class="my-3">
    <h2>One</h2>
    <div>
    {# <form action="/users/" method="get"> #}
      <label for="id" class="form-label">ID</label>
      <input type="number" id="user-id" name="id" class="form-control">
      <button onclick="getOne()" class="btn btn-primary my-2">実行</button>
    {# </form> #}
    </div>
  </div>
</div>
{% endblock main %}

{% block script %}
<script>
  const getOne = () => {
    const userId = document.getElementById("user-id").value
    location.href = `/users/${userId}`
  }
</script> 
{% endblock script %}